{{- $pages := .Site.RegularPages -}}
[
{{- $first := true -}}
{{- range $pages -}}
  {{- if $first }}{{ $first = false }}{{ else }},{{ end -}}
  {
    "title": {{ .Title | jsonify }},
    "permalink": {{ .Permalink | jsonify }},
    "summary": {{ .Summary | plainify | jsonify }},
    "content": {{ .Plain | jsonify }},
    "date": {{ .Date.UTC.Format "2006-01-02T15:04:05Z07:00" | jsonify }}
  }
{{- end -}}
]

